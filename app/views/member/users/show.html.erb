<h1><%= @user.nickname %></h1>

<% if current_user.can_edit_user? @user %>
    <div class="page-actions">
        <%= link_to "Editer", edit_member_user_path(@user), class: "button" %>
        <%= link_to "Supprimer", member_user_path(@user), class: "button", method: :delete, data: {confirm: "Confirmer la suppression"} %>
    </div>
<% end %>

