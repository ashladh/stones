<div><%= link_to "Nouveau personnage", new_member_character_path %></div>


<table id="characters" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Nom</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        <% @characters.each do |character| %>
            <tr>
                <td><%= link_to character.name, edit_member_character_path(character) %></td>
                <td class="table-icon"><%= character.level %></td>
                <td class="table-icon"><div class="wow-icon <%= character.playable_class %>"></div></td>
                <td class="table-icon"><div class="wow-icon <%= character.playable_class %>-<%= character.spec %>"></div></td>
                <td class="double-table-icon">
                    <% character.primary_professions.each do |profession| %>
                        <div class="wow-icon <%= profession %>"></div>
                    <% end %>
                </td>
                <td class="triple-table-icon">
                    <% character.secondary_professions.each do |profession| %>
                        <div class="wow-icon <%= profession %>"></div>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
