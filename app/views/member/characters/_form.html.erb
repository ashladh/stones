<%= form_for [:member, character] do |f| %>
    <div>Nom : <%= f.text_field :name, class: "text-field" %></div>

    <div class="character-class">Classe : <%= f.select :playable_class, options_for_select(playable_class_labels, character.playable_class), {include_blank: true}, {class: "select"} %></div>

    <div class="character-spec" data-spec="<%= character.spec %>"><%= f.select :spec, options_for_select({}), {}, {class: "select"} %></div>

    <div>Niveau : <%= f.number_field :level, class: "text-field"%></div>

    <div class="professions-container">Métiers principaux :
        <%= f.select :primary_professions, options_for_select(primary_professions_labels, character.primary_professions), {}, {multiple: true, class: "professions-select"} %>
    </div>

    <div class="professions-container">Métiers secondaires :
        <%= f.select :secondary_professions, options_for_select(secondary_professions_labels, character.secondary_professions), {}, {multiple: true, class: "professions-select"} %>
    </div>

    <div class="checkbox-container">Personnage principal : <%= f.check_box(:main) %>

    <div class="checkbox-container">Maître de classe : <%= f.check_box(:class_master) %>

    <div class="officer-note">Note d'officier : <%= f.text_field :officer_note %>

    <div><%= f.submit class:"button" %></div>

<% end %>