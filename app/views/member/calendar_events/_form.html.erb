<%= form_for [:member, calendar_event], html: {class: "form"} do |f| %>

    <div class="form-group">
        <%= f.label :name, "Nom :" %>
        <%= f.text_field :name, class: "text-field" %>
    </div>

    <div class="form-group">
        <%= f.label :date, "Date :" %>
        <%= f.text_field :date, class: "datepicker" %>
    </div>

    <div class="form-group">
        <%= f.label :description, "Description :" %>
        <%= f.text_area :description, class: "text-area" %></div>

    <div><%= f.submit class:"button" %></div>

<% end %>